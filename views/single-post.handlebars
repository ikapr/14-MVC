<div class="post-container">
  <div class="post-card">
    <div class="post-header">
      <h2>{{post.title}}</h2>
      <div class="post-metadata">
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
      </div>
    </div>
    <div class="post-body">
      {{post.body}}
    </div>
  </div>

  {{#if post.Comments}}
    <div class="comments-section">
      <div class="comments-header">
        <h3>Comments</h3>
      </div>

      <div class="comments-body">
        {{#each post.Comments}}
          <div class="comment">
            <p>
              {{body}}
            </p>
            <p class="comment-metadata">
              &mdash; {{User.username}}, {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </div>
  {{/if}}

  <form id="new-comment-form" class="comment-form">
    <div class="comment-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="comment-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="form-group">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-input"></textarea>
      </div>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>


<script src="/js/comment.js"></script>